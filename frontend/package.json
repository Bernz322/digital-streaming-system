{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:3000/",
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@mantine/carousel": "^5.6.3",
    "@mantine/core": "^5.6.3",
    "@mantine/dates": "^5.6.3",
    "@mantine/form": "^5.6.3",
    "@mantine/hooks": "^5.6.3",
    "@mantine/modals": "^5.6.3",
    "@mantine/notifications": "^5.6.3",
    "@mantine/spotlight": "^5.6.3",
    "@reduxjs/toolkit": "^1.8.6",
    "@tabler/icons": "^1.109.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.2",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "axios": "^1.1.3",
    "bootstrap": "^5.2.2",
    "dayjs": "^1.11.6",
    "embla-carousel-react": "^7.0.4",
    "font-awesome": "^4.7.0",
    "history": "^5.3.0",
    "jest-sonar-reporter": "^2.0.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.5.0",
    "react-data-table-component": "^7.5.3",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.4",
    "react-router-dom": "^6.4.2",
    "react-scripts": "5.0.1",
    "sass": "^1.55.0",
    "styled-components": "^5.3.6",
    "typescript": "^4.8.4",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --transformIgnorePatterns \"node_modules/(?!axios)/\"",
    "eject": "react-scripts eject",
    "coverage": "npm test -- --coverage --watchAll",
    "test-coverage": "react-scripts test --coverageDirectory test-coverage --transformIgnorePatterns \"node_modules/(?!axios)/\" --coverage --watchAll=false --testResultsProcessor jest-sonar-reporter"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": -10
      }
    }
  },
  "jestSonar": {
    "reportPath": "test-coverage/sonar",
    "reportFile": "sonar-report.xml",
    "indent": 4
  },
  "devDependencies": {
    "msw": "^0.47.4",
    "resize-observer-polyfill": "^1.5.1"
  }
}
